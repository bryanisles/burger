

<div class="container">
	{{#each burgers}}
		<div class="row justify-content-center align-items-center">
			<div class="col-5 text-right">
				{{#unless this.devoured}}
					{{this.id}}. Eat {{this.burger_name}}?
				{{/unless}}
			</div>
			<form action="/{{this.id}}?_method=PUT" method="POST">
				<div class="col-2 text-center">
					<button class="btn btn-primary btn-sm text-white consumption" data-id={{this.id}} role="button" type="submit">
						{{#unless this.devoured}}	
							Devour?
						{{/unless}}
						{{#if this.devoured}}
							Devoured.
						{{/if}}
					</button>
				</div>
			</form>
			<div class="col-5 text-left">
				{{#if this.devoured}}
					{{this.id}}. Consumed {{this.burger_name}}.
				{{/if}}
			</div>
		</div>
	{{/each}}
</div>
